<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pfa.java.pfa2025java.controllers.pharmacie.AccueilController">
    <children>


    <!-- Profile Update Section -->
        <VBox prefHeight="350.0" prefWidth="437.0" spacing="15"
              style="-fx-padding: 25; -fx-background-color: #FFFFFF; -fx-border-color: #BDC3C7; -fx-border-radius: 10;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"
                   text="Mettre Ã  jour le profil"/>

            <TextField fx:id="streetField" promptText="Rue"
                       style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
            <TextField fx:id="cityField" promptText="Ville"
                       style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
            <TextField fx:id="neighborhoodField" promptText="Quartier"
                       style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
            <TextField fx:id="emailField" promptText="Email"
                       style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>

            <PasswordField fx:id="oldpasswordField" promptText="Ancien mot de passe"
                           style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
            <PasswordField fx:id="newpasswordField" promptText="Nouveau mot de passe"
                           style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
            <PasswordField fx:id="newpasswordFieldConfirmed" promptText="Confirmer le nouveau mot de passe"
                           style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button onAction="#updateProfile"
                    style=" -fx-cursor: hand; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5; -fx-padding: 10;"
                    text="Enregistrer">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.1)" offsetX="2" offsetY="2" radius="5"/>
                </effect>
            </Button>
        </VBox>
    </children>
</HBox>
