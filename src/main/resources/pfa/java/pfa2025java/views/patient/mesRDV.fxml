<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pfa.java.pfa2025java.controllers.patient.MesRDVController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Titre de la page -->
    <Label text="Mes Rendez-vous" layoutX="250.0" layoutY="20.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- TableView pour afficher la liste des rendez-vous -->
    <TableView fx:id="rdvTable" layoutX="50.0" layoutY="50.0" prefHeight="200.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150.0" />
            <TableColumn fx:id="colMedecin" text="MÃ©decin" prefWidth="200.0" />
            <TableColumn fx:id="colStatut" text="Statut" prefWidth="150.0" />
        </columns>
    </TableView>

    <!-- Bouton pour accepter un rendez-vous -->
    <Button text="Accepter" layoutX="200.0" layoutY="300.0" onAction="#acceptRDV"/>

    <!-- Bouton pour refuser un rendez-vous -->
    <Button text="Refuser" layoutX="300.0" layoutY="300.0" onAction="#refuseRDV"/>

</AnchorPane>
