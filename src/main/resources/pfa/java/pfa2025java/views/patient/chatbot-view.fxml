<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="538.0" prefWidth="517.0" spacing="10" style="-fx-background-color: #f4f4f4;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pfa.java.pfa2025java.controllers.ChatbotGheithController">
    <!-- En-tête avec un message d'avertissement -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Chatbot Gheith">
        <font>
            <Font name="Arial" size="18"/>
        </font>
    </Label>
    <Label style="-fx-font-size: 12px; -fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center;"
           text="Nous ne sommes pas responsables des réponses du chatbot.">
        <font>
            <Font name="Arial" size="12"/>
        </font>
    </Label>

    <!-- Champ de saisie -->
    <TextField fx:id="inputField" prefWidth="400.0" promptText="Entrez votre requête..."
               style="-fx-font-size: 14px; -fx-padding: 5px;"/>

    <!-- Bouton Envoyer -->
    <Button fx:id="sendButton" prefWidth="100.0"
            style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;"
            text="Envoyer">
        <padding>
            <Insets bottom="5" left="10" right="10" top="5"/>
        </padding>
    </Button>

    <!-- Zone de réponse -->
    <TextArea fx:id="responseArea" editable="false" prefHeight="279.0" prefWidth="517.0"
              style="-fx-font-size: 14px; -fx-control-inner-background: #fff; -fx-border-color: #ccc; -fx-padding: 5px;"
              wrapText="true"/>
</VBox>
