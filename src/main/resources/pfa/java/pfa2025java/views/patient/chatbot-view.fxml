<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="520.0" spacing="15"
      style="-fx-background-color: #f8f9fa; -fx-padding: 20px; -fx-border-radius: 15px; -fx-background-radius: 15px;
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 5);"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pfa.java.pfa2025java.controllers.ChatbotGheithController">

    <!-- Chatbot Title -->
    <Label text="Chatbot E-Medical"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <!-- Warning Message -->
    <Label text="Nous ne sommes pas responsables des réponses du chatbot."
           style="-fx-font-size: 12px; -fx-text-fill: #777; -fx-wrap-text: true; -fx-text-alignment: center;"/>

    <!-- Spacer -->
    <Region prefHeight="10.0"/>

    <!-- Input Field -->
    <TextField fx:id="inputField" prefWidth="460.0" promptText="Entrez votre requête..."
               style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px; -fx-background-radius: 8px;
                      -fx-border-color: #ddd; -fx-background-color: #ffffff;"/>

    <!-- Send Button -->
    <Button fx:id="sendButton" text="Envoyer" prefWidth="120.0"
            style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #4CAF50;
                   -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 8px 16px;
                   -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0, 0, 2);"/>

    <!-- Spacer -->
    <Region prefHeight="10.0"/>

    <!-- Response Area -->
    <TextArea fx:id="responseArea" editable="false" prefHeight="280.0" prefWidth="480.0" wrapText="true"
              style="-fx-font-size: 14px; -fx-control-inner-background: #ffffff; -fx-border-color: #ccc;
                     -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-padding: 10px; -fx-text-fill: #333;"/>
</VBox>
