<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="642.0" prefWidth="717.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pfa.java.pfa2025java.controllers.patient.ProfilController">

    <VBox alignment="CENTER_LEFT" layoutX="-2.0" prefHeight="521.0" prefWidth="206.0" spacing="10"
          style="-fx-background-color: #2C3E50; -fx-padding: 10;" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="-2.0" AnchorPane.topAnchor="0.0">
        <Text fill="#eeebeb" strokeType="OUTSIDE" strokeWidth="0.0" text="Ali Benjannet" textAlignment="CENTER">
            <font>
                <Font size="23.0"/>
            </font>
        </Text>
        <Button fx:id="accueilButton"
                style=" -fx-cursor: hand; -fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Profil"/>
        <Button onAction="#consulterOrdonnances"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Mes Ordonnance"/>
        <Button onAction="#consulterRdv"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Mes RDV"/>
        <Button onAction="#consulterPharmacies"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Consulter Pharmacies"/>
        <Button onAction="#demandeRendezVous"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Demande RDV"/>

        <Button onAction="#logout"
                style=" -fx-cursor: hand; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Déconnexion"/>
    </VBox>
    <VBox layoutX="199.0" prefHeight="642.0" prefWidth="519.0" spacing="15"
          style="-fx-padding: 25; -fx-background-color: #FFFFFF; -fx-border-color: #BDC3C7; -fx-border-radius: 10;">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"
               text="Mettre à jour le profil"/>

        <TextField fx:id="nom" promptText="nom"
                   style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
        <TextField fx:id="prenom" promptText="prenom"
                   style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
        <TextField fx:id="numero" promptText="numero"
                   style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
        <TextField fx:id="emailField" promptText="Email"
                   style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>

        <PasswordField fx:id="oldpasswordField" promptText="Ancien mot de passe"
                       style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
        <PasswordField fx:id="newpasswordField" promptText="Nouveau mot de passe"
                       style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>
        <PasswordField fx:id="newpasswordFieldConfirmed" promptText="Confirmer le nouveau mot de passe"
                       style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 14px;"/>

        <Button onAction="#updateProfile"
                style=" -fx-cursor: hand; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5; -fx-padding: 10;"
                text="Enregistrer">
            <effect>
                <DropShadow color="rgba(0,0,0,0.1)" offsetX="2" offsetY="2" radius="5"/>
            </effect>
        </Button>
    </VBox>

</AnchorPane>
