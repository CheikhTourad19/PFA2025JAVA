<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pfa.java.pfa2025java.controllers.medecin.TasksMenu">

    <!-- Barre latérale -->
    <left>
        <VBox prefWidth="200" style="-fx-background-color: #F3F3F3;" spacing="15">
            <padding>
                <Insets top="20" right="15" left="15" bottom="20"/>
            </padding>

            <Text text="Menu" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Button text="Créer Tâche"
                    fx:id="createTaskBtn"
                    onAction="#loadCreateTask"
                    style="-fx-background-color: #4A90E2; -fx-text-fill: white;"/>
            <Button text="Mes Tâches"
                    onAction="#loadMyTasks"
                    style="-fx-background-color: #50E3C2; -fx-text-fill: white;"/>
            <Button text="Tâches Suivies"
                    onAction="#loadFollowedTasks"
                    style="-fx-background-color: #F5A623; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Contenu dynamique -->
    <center>
        <AnchorPane fx:id="contentPane"/>
    </center>
</BorderPane>