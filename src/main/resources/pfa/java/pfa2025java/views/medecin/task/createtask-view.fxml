<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.ListView?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pfa.java.pfa2025java.controllers.medecin.TaskController">
    <VBox spacing="20" prefWidth="600">
        <Label text="Créer une nouvelle tâche" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="100"/>
                <ColumnConstraints prefWidth="300"/>
            </columnConstraints>

            <!-- Titre -->
            <Label text="Titre :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="taskTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Deadline -->
            <Label text="Échéance :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Assignation -->
            <Label text="Assigner à :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <VBox GridPane.rowIndex="2" GridPane.columnIndex="1">
                <TextField fx:id="searchUser"/>
                <ListView fx:id="userListView" visible="false" prefHeight="100"/>
            </VBox>

            <!-- Description -->
            <Label text="Description :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="description" prefRowCount="5" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Bouton de création -->
            <Button text="Créer"
                    onAction="#handleCreateTask"
                    GridPane.rowIndex="4"
                    GridPane.columnIndex="1"
                    prefWidth="100"/>
        </GridPane>
    </VBox>
</AnchorPane>