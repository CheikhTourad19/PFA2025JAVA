<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pfa.java.pfa2025java.controllers.ChatbotGheithController">
    <VBox alignment="CENTER_LEFT" layoutX="-2.0" prefHeight="521.0" prefWidth="206.0" spacing="10"
          style="-fx-background-color: #2C3E50; -fx-padding: 10;" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="-2.0" AnchorPane.topAnchor="0.0">
        <Text fx:id="nomUtil" fill="#eeebeb" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
            <font>
                <Font size="23.0"/>
            </font>
        </Text>

        <Button fx:id="accueilButton" onAction="#consulterProfil"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Profil"/>
        <Button onAction="#consulterOrdonnances"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Mes Ordonnance"/>
        <Button onAction="#mesRdv"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Mes RDV"/>
        <Button onAction="#consulterPharmacies"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Consulter Pharmacies"/>
        <Button onAction="#demandeRendezVous"
                style=" -fx-cursor: hand; -fx-background-color: #34495E; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Demande RDV"/>
        <Button layoutX="20.0" layoutY="336.0"
                style=" -fx-cursor: hand; -fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Chat AI"/>

        <Button onAction="#logout"
                style=" -fx-cursor: hand; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-pref-width: 180; -fx-font-size: 14px; -fx-font-weight: bold;"
                text="Déconnexion"/>
    </VBox>
    <VBox alignment="CENTER" layoutX="204.0" prefHeight="538.0" prefWidth="517.0" spacing="10"
          style="-fx-background-color: #f4f4f4;">
        <!-- En-tête avec un message d'avertissement -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Chatbot Gheith">
            <font>
                <Font name="Arial" size="18"/>
            </font>
        </Label>
        <Label style="-fx-font-size: 12px; -fx-text-fill: #555; -fx-wrap-text: true; -fx-alignment: center;"
               text="Nous ne sommes pas responsables des réponses du chatbot.">
            <font>
                <Font name="Arial" size="12"/>
            </font>
        </Label>

        <!-- Champ de saisie -->
        <TextField fx:id="inputField" prefWidth="400.0" promptText="Entrez votre requête..."
                   style="-fx-font-size: 14px; -fx-padding: 5px;"/>

        <!-- Bouton Envoyer -->
        <Button fx:id="sendButton" prefWidth="100.0"
                style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;"
                text="Envoyer">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
            </padding>
        </Button>

        <!-- Zone de réponse -->
        <TextArea fx:id="responseArea" editable="false" prefHeight="279.0" prefWidth="517.0"
                  style="-fx-font-size: 14px; -fx-control-inner-background: #fff; -fx-border-color: #ccc; -fx-padding: 5px;"
                  wrapText="true"/>
    </VBox>
</AnchorPane>
